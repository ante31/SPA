#include <stdio.h>
#include <stdlib.h>
#include <time.h>
#define min(a,b) (((a)<(b))?(a):(b))

int cmpfunc(const void* a, const void* b) {
	return (*(int*)a - *(int*)b);
}

void shuffle(int* niz, int n) {
	for (int i = 0; i < n; i++) {
		int j = (rand() * rand()) % n;
		int tmp = niz[i];
		niz[i] = niz[j];
		niz[j] = tmp;
	}
}

int* generiraj(int n) {
	int* niz = (int*)malloc(sizeof(int) * n);
	niz[0] = rand() % 5;
	for (int i = 1; i < n; i++) {
		niz[i] = niz[i - 1] + 1 + rand() % 5;
	}
	return niz;
}

int* presjekPoredanihNizova(int* niz, int* niz2, int n, int m) {

	int* niz3 = (int*)malloc(sizeof(int) * min(n, m));
	int sizeofNiz = min(n, m);
	int i = 0, j = 0, k = 0;

	while (i < sizeofNiz) {
		if (niz[i] == niz2[j]) {
			niz3[k] = niz[i];
			i++;
			j++;
			k++;
		}
		else if (niz[i] < niz2[j]) {
			i++;
		}
		else {
			j++;
		}
	}
	return niz3;
}

void free_memory(int* niz) {
	free(niz);
}

int main()
{
	clock_t start_t, end_t;
	int n = 3000000, m = 3000000;
	srand(time(NULL));
	int* niz = generiraj(n);
	shuffle(niz, n);
	int* niz2 = generiraj(m);
	shuffle(niz, m);
	start_t = clock();
	qsort(niz, n, sizeof(int), cmpfunc);
	qsort(niz2, m, sizeof(int), cmpfunc);
	int* niz3 = presjekPoredanihNizova(niz, niz2, n, m);
	free_memory(niz3);
	end_t = clock();
	printf("Total time taken by CPU: %f\n", (double)(end_t - start_t) / CLOCKS_PER_SEC);
}
